<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rock"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="com.example.progressiveoverload.EditExercisesListFragment" >
    
    <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content">
         
	    <ListView
	        android:id="@+id/exerciseList"
	        android:layout_width="200dp"
	        android:layout_height="100dp"
	        android:background="@color/white"
			android:layout_centerInParent="true"/>
	    
	</RelativeLayout>

    <Button
        android:id="@+id/editExercisesButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Press to update"/>
    
    <Button
        android:id="@+id/createExerciseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/createExerciseButtonText" />
    
    <Button
        android:id="@+id/removeExerciseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/removeExerciseButtonText" />

</LinearLayout>
