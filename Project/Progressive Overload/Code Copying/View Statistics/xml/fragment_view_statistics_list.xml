<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rock"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="com.example.progressiveoverload.ViewStatisticsListFragment" >
    
    <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content">
         
	    <ListView
	        android:id="@+id/statisticsList"
	        android:layout_width="200dp"
	        android:layout_height="100dp"
	        android:background="@color/white"
			android:layout_centerInParent="true"/>
	    
	</RelativeLayout>

    <Button
        android:id="@+id/viewStatisticsButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Press to update"/>
    
    <Button
        android:id="@+id/viewWeightButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewWeightButtonText" />
    
    <Button
        android:id="@+id/viewRepsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewRepsButtonText" />
    
    <Button
        android:id="@+id/viewRestButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewRestButtonText" />
    

</LinearLayout>
